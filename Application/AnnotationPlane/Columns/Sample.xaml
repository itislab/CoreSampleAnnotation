<UserControl x:Class="CoreSampleAnnotation.AnnotationPlane.Columns.Sample"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CoreSampleAnnotation.AnnotationPlane.Columns"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="100">
    <Grid Width="100" Height="130">
        <Grid Height="100" Width="100" VerticalAlignment="Top" HorizontalAlignment="Center">
            <Ellipse StrokeThickness="2" Stroke="Black" StrokeDashArray="5 5" Fill="White"/>
            <TextBlock FontSize="20" VerticalAlignment="Center" HorizontalAlignment="Center" Text="{Binding Number, FallbackValue=номер}"></TextBlock>
        </Grid>
        <TextBlock FontSize="20" VerticalAlignment="Bottom" HorizontalAlignment="Center" Text="{Binding Depth, FallbackValue=глубина, StringFormat={}{0:#.##} м}"></TextBlock>
    </Grid>
</UserControl>

<UserControl x:Class="CoreSampleAnnotation.PhotoMarkup.PhotoMarkup"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CoreSampleAnnotation.PhotoMarkup"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="600">
    <UserControl.Background>
        <SolidColorBrush>Blue</SolidColorBrush>
    </UserControl.Background>
    <local:CoordTransformedCanvas HorizontalAlignment="Stretch" VerticalAlignment="Stretch" x:Name="CommonCanvas" ClipToBounds="True" Background="Transparent">
        <Image Source="{Binding ImagePath, FallbackValue='pack://application:,,,/CoreSampleAnnotation;component/Media/checkerboard.jpg'}" RenderTransform="{Binding ImageTransform, Mode=TwoWay}" IsManipulationEnabled="True" HorizontalAlignment="Left" VerticalAlignment="Top" Name="Image"/>
        <local:CalibratedRegionInfoView Panel.ZIndex="20" x:Name="RegionInfoView"></local:CalibratedRegionInfoView>
    </local:CoordTransformedCanvas>
</UserControl>
